<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <AcrylicBrush
        x:Key="ExpandedPlayerMask"
        BackgroundSource="Backdrop"
        FallbackColor="{StaticResource SystemChromeMediumColor}"
        TintColor="#FF606060"
        TintOpacity="0.5" />
    <SolidColorBrush x:Key="FakeMicaBackgroundColor" Color="#26272b" />
    <SolidColorBrush x:Key="CardBorderBrush" Color="Gray" Opacity="0.2"/>

    <Color x:Key="CaptionButtonForegroundColor">#FFFFFF</Color>
    <Color x:Key="CaptionButtonHoverColor">#333333</Color>
    <Color x:Key="CaptionButtonPressedColor">#323232</Color>

    <Color x:Key="GradientColor">#DD000000</Color>
</ResourceDictionary>