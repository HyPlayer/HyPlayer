<ContentDialog
    x:Class="HyPlayer.Controls.SongListSelect"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="选择歌单"
    CloseButtonText="关闭"
    CornerRadius="20"
    FontWeight="Bold"
    mc:Ignorable="d">
    <StackPanel>
        <ListView
            x:Name="ListViewSongList"
            MaxHeight="400"
            SelectionChanged="ListViewSongList_OnSelectionChanged"
            SelectionMode="Single" />
    </StackPanel>
</ContentDialog>