<UserControl
    x:Class="HyPlayer.Controls.PlayBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:classes="using:HyPlayer.Classes"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hy="using:HyPlayer"
    xmlns:local="using:HyPlayer.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:Microsoft.Toolkit.Uwp.UI.Media"
    d:DesignHeight="102.667"
    d:DesignWidth="1289"
    Background="{x:Bind hy:Common.Setting.acrylicBackgroundStatus, Mode=OneWay, Converter={StaticResource BooleanToBarPlayBarBrushesConverter}}"
    CornerRadius="20"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <UserControl.Resources>

        <LinearGradientBrush x:Key="SolidPlayButtonColor" StartPoint="0,0" EndPoint="1,1">
            <GradientStop x:Name="PlayBtnGradient" Offset="0.2" Color="#fefefe" />
            <GradientStop Offset="0.8" Color="#f1f1f1" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="SolidPlayButtonIconColor" StartPoint="0,0" EndPoint="1,1">
            <GradientStop x:Name="PlayBtnIconGradient" Offset="0.2" Color="{ThemeResource SystemAccentColorLight2}" />
            <GradientStop Offset="0.8" Color="{ThemeResource SystemAccentColorLight1}" />
        </LinearGradientBrush>



        <Flyout x:Key="VolumeFlyout">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <FontIcon
                    x:Name="BtnMuteIcon"
                    Grid.Column="0"
                    Glyph="&#xE15D;"
                    Tapped="BtnMute_OnCllick" />
                <Slider
                    x:Name="SliderAudioRate"
                    Grid.Column="1"
                    Width="100"
                    VerticalAlignment="Center"
                    x:FieldModifier="public"
                    ValueChanged="SliderAudioRate_ValueChanged" />
            </Grid>
        </Flyout>
        <FontIconSource
            x:Key="IconTick"
            x:Name="IconTick"
            FontFamily="{StaticResource SymbolThemeFontFamily}"
            Glyph="&#xE008;" />
        <Storyboard x:Name="PlayBarBackgroundFadeIn">
            <FadeInThemeAnimation BeginTime="0:0:0.2" Storyboard.TargetName="PlayBarBackground" />
            <FadeInThemeAnimation Storyboard.TargetName="PlayBarAcrylic" />
        </Storyboard>
        <Storyboard x:Name="PlayBarBackgroundFadeOut">
            <FadeOutThemeAnimation Storyboard.TargetName="PlayBarBackground" Duration="0:0:0.2" />
            <FadeOutThemeAnimation
                BeginTime="0:0:0.15"
                Storyboard.TargetName="PlayBarAcrylic"
                Duration="0:0:0.2" />
        </Storyboard>
        <Storyboard x:Name="PlayBarBackgroundAni">
            <DoubleAnimation
                AutoReverse="True"
                RepeatBehavior="Forever"
                Storyboard.TargetName="PlayBarBackground"
                Storyboard.TargetProperty="Opacity"
                From="1"
                To="0.4"
                Duration="0:0:4">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                AutoReverse="True"
                RepeatBehavior="Forever"
                Storyboard.TargetName="BackgroundAni"
                Storyboard.TargetProperty="ScaleY"
                From="1"
                To="8"
                Duration="0:0:3">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                AutoReverse="True"
                RepeatBehavior="Forever"
                Storyboard.TargetName="PlayBtnGradient"
                Storyboard.TargetProperty="Offset"
                From="0.2"
                To="0.5"
                Duration="0:0:4">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Name="InitializedAni">
            <DoubleAnimation
                Storyboard.TargetName="GridSongInfo"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:1.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="SongInfoScale"
                Storyboard.TargetProperty="Y"
                From="100"
                To="0"
                Duration="0:0:1.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="MainBtnScale"
                Storyboard.TargetProperty="Y"
                From="100"
                To="0"
                Duration=" 0:0:0.8">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="MainControlGrid"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration=" 0:0:0.8">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="BtnsAni"
                Storyboard.TargetProperty="Y"
                From="100"
                To="0"
                Duration=" 0:0:1.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="Btns"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration=" 0:0:1.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="BtnExpandAni"
                Storyboard.TargetProperty="Y"
                From="100"
                To="0"
                Duration=" 0:0:1.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="ButtonExpand"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration=" 0:0:1.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>


        </Storyboard>

    </UserControl.Resources>
    <Grid
        x:Name="GridThis"
        Background="Transparent"
        CornerRadius="4,4,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <controls:ImageEx
            x:Name="PlayBarBackground"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            VerticalAlignment="Top"
            EnableLazyLoading="True"
            IsCacheEnabled="False"
            Source="{x:Bind AlbumImage.Source, Mode=OneWay}"
            Stretch="UniformToFill"
            Visibility="{x:Bind hy:Common.Setting.playbarBackgroundAcrylic, Mode=OneWay}">
            <controls:ImageEx.RenderTransform>
                <ScaleTransform x:Name="BackgroundAni" CenterX="200" CenterY="55" />
            </controls:ImageEx.RenderTransform>
        </controls:ImageEx>
        <Rectangle
            x:Name="PlayBarAcrylic"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Fill="{ThemeResource SystemControlAltMediumLowAcrylicElementMediumBrush}"
            Opacity="1"
            Visibility="{x:Bind hy:Common.Setting.playbarBackgroundAcrylic, Mode=OneWay}" />
        <Grid
            x:Name="GridSongInfoContainer"
            Grid.Column="0"
            HorizontalAlignment="Left"
            x:FieldModifier="public"
            Canvas.ZIndex="2"
            CornerRadius="4,0,0,0">
            <Grid.RenderTransform>
                <TranslateTransform x:Name="SongInfoScale" />
            </Grid.RenderTransform>
            <StackPanel
                x:Name="GridSongAdvancedOperation"
                Margin="25,0,0,0"
                Orientation="Horizontal"
                Spacing="15"
                Visibility="Collapsed">
                <Button
                    x:Name="Btn_Collapse"
                    Width="40"
                    Height="40"
                    Padding="-5"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="ButtonCollapse_OnClick"
                    CornerRadius="20">
                    <FontIcon Glyph="&#xE972;" />
                </Button>
                <Button
                    x:Name="Btn_Sub"
                    Width="40"
                    Height="40"
                    Padding="-5"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="Btn_Sub_OnClick"
                    CornerRadius="20"
                    ToolTipService.ToolTip="添加到歌单"
                    Visibility="{x:Bind Btn_Share.IsEnabled, Mode=OneWay}">
                    <FontIcon Glyph="&#xE1DA;" />
                </Button>
                <Button
                    x:Name="Btn_Down"
                    Width="40"
                    Height="40"
                    Padding="-5"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="Btn_Down_OnClick"
                    CornerRadius="20"
                    ToolTipService.ToolTip="下载音乐"
                    Visibility="{x:Bind Btn_Share.IsEnabled, Mode=OneWay}">
                    <FontIcon Glyph="&#xE118;" />
                </Button>
                <Button
                    x:Name="Btn_Comment"
                    Width="40"
                    Height="40"
                    Padding="-5"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="Btn_Comment_OnClick"
                    CornerRadius="20"
                    IsEnabled="{x:Bind Btn_Share.IsEnabled, Mode=OneWay}"
                    ToolTipService.ToolTip="查看评论"
                    Visibility="{x:Bind Mode=OneWay, Path=hy:Common.Setting.notClearMode}">
                    <FontIcon Glyph="&#xE8F2;" />
                </Button>
                <Button
                    x:Name="Btn_Share"
                    Width="40"
                    Height="40"
                    Padding="-5"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="Btn_Share_OnClick"
                    CornerRadius="20"
                    ToolTipService.ToolTip="分享"
                    Visibility="{x:Bind Btn_Share.IsEnabled, Mode=OneWay}">
                    <FontIcon Glyph="&#xE72D;" />
                </Button>
            </StackPanel>
            <Grid
                x:Name="GridSongInfo"
                HorizontalAlignment="Stretch"
                ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid
                    x:Name="ImageContainer"
                    Margin="0"
                    HorizontalAlignment="Left"
                    BorderThickness="0"
                    CornerRadius="{x:Bind hy:Common.Setting.playBarMargin, Mode=OneWay, Converter={StaticResource PlayBarImageRadiusConverter}}"
                    IsTapEnabled="True"
                    PointerEntered="ImageContainer_OnPointerEntered"
                    PointerExited="ImageContainer_OnPointerExited"
                    Tapped="ImageContainer_Tapped">
                    <Border
                        x:Name="AlbumImageHover"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Canvas.ZIndex="15"
                        Visibility="Collapsed">
                        <Border.Background>
                            <media:BackdropBlurBrush Amount="10" />
                        </Border.Background>
                        <FontIcon Glyph="&#xE70E;" />
                    </Border>
                    <controls:ImageEx
                        x:Name="AlbumImage"
                        EnableLazyLoading="True"
                        IsCacheEnabled="False"
                        PlaceholderStretch="Uniform"
                        Stretch="UniformToFill">
                        <controls:ImageEx.Source>
                            <BitmapImage x:Name="AlbumImageSource" UriSource="/Assets/icon.png" />
                        </controls:ImageEx.Source>
                    </controls:ImageEx>
                </Grid>
                <Grid
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    RowSpacing="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>


                    <TextBlock
                        x:Name="TbSongName"
                        Grid.Row="0"
                        HorizontalAlignment="Stretch"
                        FontSize="22"
                        FontWeight="Bold"
                        IsTextSelectionEnabled="True"
                        TextTrimming="CharacterEllipsis"
                        ToolTipService.ToolTip="{x:Bind Mode=OneWay, Path=TbSongName.Text}">
                        <TextBlock.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem
                                    x:Name="CopySongNameFlyoutItem"
                                    Click="CopySongDetailFlyoutItem_Click"
                                    Text="复制歌曲名">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE16F;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </TextBlock.ContextFlyout>
                    </TextBlock>


                    <HyperlinkButton
                        x:Name="TbSingerName"
                        Grid.Row="1"
                        Padding="0"
                        VerticalAlignment="Top"
                        Click="TbSingerName_OnTapped"
                        FontSize="12"
                        Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}"
                        Style="{StaticResource TextBlockButtonStyle}">
                        <HyperlinkButton.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem
                                    x:Name="CopySingerNameFlyoutItem"
                                    Click="CopySongDetailFlyoutItem_Click"
                                    Text="复制歌手名">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE16F;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </HyperlinkButton.ContextFlyout>
                    </HyperlinkButton>
                    <HyperlinkButton
                        x:Name="TbAlbumName"
                        Grid.Row="2"
                        Padding="0"
                        VerticalAlignment="Top"
                        Click="TbAlbumName_OnTapped"
                        FontSize="12"
                        Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}"
                        Style="{StaticResource TextBlockButtonStyle}">
                        <HyperlinkButton.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem
                                    x:Name="CopyAlbumNameFlyoutItem"
                                    Click="CopySongDetailFlyoutItem_Click"
                                    Text="复制专辑名">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE16F;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </HyperlinkButton.ContextFlyout>
                    </HyperlinkButton>
                    <Grid
                        x:Name="SongInfoTag"
                        Grid.Row="3"
                        Height="20"
                        Padding="3,0"
                        HorizontalAlignment="Left"
                        x:FieldModifier="public"
                        BorderBrush="Red"
                        BorderThickness="1.5"
                        CornerRadius="4">
                        <TextBlock
                            x:Name="TbSongTag"
                            x:FieldModifier="public"
                            FontSize="11"
                            FontWeight="Bold"
                            Foreground="Red"
                            Text="无歌曲" />
                    </Grid>
                </Grid>

            </Grid>
        </Grid>
        <Grid
            x:Name="MainControlGrid"
            Grid.Column="1"
            Margin="-200,0,-200,0"
            Canvas.ZIndex="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <Grid.RenderTransform>
                <TranslateTransform x:Name="MainBtnScale" />
            </Grid.RenderTransform>
            <Grid
                x:Name="MainBtnsGrid"
                Grid.Row="0"
                Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button
                    x:Name="BtnPlayRollType"
                    Grid.Column="2"
                    Width="38"
                    Height="38"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#22ffffff"
                    BorderThickness="0"
                    Click="BtnPlayRollType_OnClick"
                    CornerRadius="30"
                    ToolTipService.ToolTip="{x:Bind FlyoutPlayRollType.Text, Mode=OneWay}">
                    <FontIcon
                        x:Name="IconPlayType"
                        FontSize="13"
                        Glyph="&#xE169;" />
                </Button>
                <Button
                    x:Name="BtnPreviousSong"
                    Grid.Column="3"
                    Width="38"
                    Height="38"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#22ffffff"
                    BorderThickness="0"
                    Click="BtnPreviousSong_OnClick"
                    CornerRadius="30">
                    <FontIcon
                        x:Name="IconPrevious"
                        FontSize="13"
                        Glyph="&#xF8AC;" />
                </Button>
                <Button
                    x:Name="BtnPlayStateChange"
                    Grid.Column="4"
                    Width="50"
                    Height="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    AutomationProperties.AcceleratorKey="Space"
                    Background="#22ffffff"
                    BorderThickness="0"
                    Click="BtnPlayStateChange_OnClick"
                    CornerRadius="30"
                    KeyUp="BtnPlayStateChange_KeyUp"
                    Opacity="0.9">
                    <FontIcon
                        x:Name="PlayStateIcon"
                        FontSize="18"
                        Glyph="&#xF5B0;" />
                    <!--  EDB4  -->
                </Button>
                <Button
                    x:Name="BtnNextSong"
                    Grid.Column="5"
                    Width="40"
                    Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#22ffffff"
                    BorderThickness="0"
                    Click="BtnNextSong_OnClick"
                    CornerRadius="30">
                    <FontIcon FontSize="13" Glyph="&#xF8AD;" />
                </Button>
                <Button
                    x:Name="BtnLike"
                    Grid.Column="6"
                    Width="40"
                    Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#22ffffff"
                    BorderThickness="0"
                    Click="BtnLike_OnClick"
                    CornerRadius="30">
                    <FontIcon
                        x:Name="IconLiked"
                        FontSize="14"
                        Glyph="&#xE00B;" />
                </Button>
            </Grid>
            <Grid
                x:Name="PlayProgress"
                Grid.Row="1"
                ColumnSpacing="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    x:Name="TextBlockNowTime"
                    Grid.Column="0"
                    Margin="0,5,5,0"
                    controls:DockPanel.Dock="Left" />
                <Border Grid.Column="1" Padding="5,0,5,0">
                    <Slider
                        x:Name="SliderProgress"
                        Margin="-5,0,-5,0"
                        ManipulationCompleted="SliderProgress_ManipulationCompleted"
                        ManipulationMode="TranslateX"
                        ManipulationStarted="SliderProgress_ManipulationStarted"
                        ManipulationStarting="SliderProgress_OnManipulationStarting">
                        <Slider.ThumbToolTipValueConverter>
                            <classes:ThumbConverter SecondValue="{Binding SecondValue}" />

                        </Slider.ThumbToolTipValueConverter>
                    </Slider>
                </Border>
                <TextBlock
                    x:Name="TextBlockTotalTime"
                    Grid.Column="3"
                    Margin="5,5,0,0"
                    controls:DockPanel.Dock="Right" />

            </Grid>
        </Grid>
        <controls:UniformGrid
            x:Name="Btns"
            Grid.Column="2"
            Margin="50,0,0,0"
            HorizontalAlignment="Right"
            ColumnSpacing="20"
            Columns="3"
            CornerRadius="20">
            <ToggleButton
                x:Name="ButtonDesktopLyrics"
                Width="40"
                Height="40"
                Padding="-5"
                HorizontalAlignment="Center"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="ToggleButton_Click"
                CornerRadius="20"
                FontSize="18"
                FontWeight="SemiBold"
                IsChecked="{x:Bind Mode=OneWay, Path=hy:Common.Setting.toastLyric}"
                IsThreeState="False"
                ToolTipService.ToolTip="桌面歌词">
                <IconSourceElement
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IconSource="{StaticResource DesktopLyricIcon}" />
            </ToggleButton>
            <Button
                x:Name="BtnVolume"
                Width="40"
                Height="40"
                Padding="-5"
                HorizontalAlignment="Center"
                Background="Transparent"
                BorderBrush="Transparent"
                CornerRadius="20"
                Flyout="{StaticResource VolumeFlyout}">
                <FontIcon x:Name="BtnVolIcon" Glyph="&#xE15D;" />
                <!--  E198  -->
            </Button>
            <Button
                x:Name="ButtonPlayList"
                Width="40"
                Height="40"
                Padding="-5"
                HorizontalAlignment="Center"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="ButtonPlayList_OnClick"
                CornerRadius="20">
                <Button.Flyout>
                    <Flyout>
                        <StackPanel Orientation="Vertical">
                            <controls:DockPanel LastChildFill="True">
                                <Button
                                    x:Name="BtnReverse"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Click="BtnReverse_Click"
                                    ToolTipService.ToolTip="倒序播放列表">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE7AD;" />
                                </Button>
                                <TextBlock
                                    x:Name="PlayListTitle"
                                    Margin="16,0,0,0"
                                    FontSize=" 16"
                                    FontWeight="Bold"
                                    HorizontalTextAlignment="Center"
                                    IsDoubleTapEnabled="True"
                                    Text="播放列表" />
                                <Button
                                    Margin="5,-5,10,5"
                                    controls:DockPanel.Dock="Right"
                                    Click="ButtonCleanAll_OnClick"
                                    Content="清除"
                                    Foreground="OrangeRed" />
                                <Button
                                    Margin="0,-5,0,5"
                                    HorizontalAlignment="Right"
                                    controls:DockPanel.Dock="Right"
                                    Click="ButtonAddLocal_OnClick"
                                    Content="添加本地" />
                            </controls:DockPanel>
                            <ListView
                                x:Name="ListBoxPlayList"
                                Width="400"
                                Height="500"
                                ItemContainerStyle="{ThemeResource ListViewItemStyle}"
                                ItemsSource="{x:Bind PlayItems, Mode=OneWay}"
                                SelectionChanged="ListBoxPlayList_OnSelectionChanged"
                                SelectionMode="Single">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="classes:HyPlayItem">
                                        <Border>
                                            <StackPanel Margin="0,5,0,5" Orientation="Horizontal">
                                                <StackPanel Width="345" Orientation="Vertical">
                                                    <TextBlock FontWeight="Bold" Text="{x:Bind Path=PlayItem.Name}" />
                                                    <TextBlock Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}" Text="{x:Bind Path=PlayItem.ArtistString}" />
                                                </StackPanel>
                                                <Button
                                                    Width="24"
                                                    Height="24"
                                                    Padding="-5"
                                                    Background="Transparent"
                                                    BorderBrush="Transparent"
                                                    Click="PlayListRemove_OnClick">
                                                    <FontIcon
                                                        HorizontalAlignment="Left"
                                                        FontSize="16"
                                                        Glyph="&#xE10A;" />
                                                </Button>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
                <FontIcon Glyph="&#xE142;" />
            </Button>
            <controls:UniformGrid.RenderTransform>
                <TranslateTransform x:Name="BtnsAni" />
            </controls:UniformGrid.RenderTransform>
        </controls:UniformGrid>
        <Button
            x:Name="ButtonExpand"
            Grid.Column="3"
            Width="40"
            Height="40"
            Padding="-5"
            HorizontalAlignment="Center"
            Background="Transparent"
            BorderBrush="Transparent"
            Click="ButtonExpand_OnClick"
            CornerRadius="20">
            <FontIcon FontSize="24" Glyph="&#xE971;" />
            <Button.RenderTransform>
                <TranslateTransform x:Name="BtnExpandAni" />
            </Button.RenderTransform>
        </Button>
        <Button
            x:Name="ButtonCollapse"
            Grid.Column="3"
            Width="40"
            Height="40"
            Padding="-5"
            HorizontalAlignment="Center"
            Background="Transparent"
            BorderBrush="Transparent"
            Click="ButtonCollapse_OnClick"
            CornerRadius="20"
            Visibility="Collapsed">
            <FontIcon FontSize="24" Glyph="&#xE972;" />
        </Button>
        <Button
            x:Name="BtnMore"
            Grid.Column="3"
            Width="40"
            Height="40"
            Margin="10,48,0,0"
            Padding="0"
            VerticalAlignment="Center"
            Background="Transparent"
            BorderBrush="Transparent"
            CornerRadius="30"
            Visibility="Collapsed">
            <Button.Flyout>
                <MenuFlyout>
                    <MenuFlyoutItem IsEnabled="False" Text="{x:Bind Mode=OneWay, Path=TbSongName.Text}" />
                    <MenuFlyoutItem IsEnabled="False" Text="{x:Bind Mode=OneWay, Path=TbSingerName.Content}" />
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem
                        x:Name="BtnFlyoutLike"
                        Click="BtnLike_OnClick"
                        Text="喜欢歌曲">
                        <MenuFlyoutItem.Icon>
                            <FontIcon x:Name="FlyoutLiked" Glyph="&#xE00B;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem
                        x:Name="FlyoutDesktopLyrics"
                        Click="ToggleButton_Click"
                        Text="桌面歌词">
