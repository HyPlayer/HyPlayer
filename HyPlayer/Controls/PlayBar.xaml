<UserControl
    x:Class="HyPlayer.Controls.PlayBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HyPlayer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:hyPlayControl="using:HyPlayer.HyPlayControl"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}"
    d:DesignHeight="100"
    d:DesignWidth="1080">
    <Grid
        Name="GridThis">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger
                            MinWindowWidth="1024" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter
                            Target="SubControlGrid.Visibility"
                            Value="Visible" />
                        <Setter
                            Target="ButtonCollapse.Margin"
                            Value="10" />
                        <Setter
                            Target="ButtonExpand.Margin"
                            Value="10" />
                        <Setter
                            Target="ButtonPlayList.Margin"
                            Value="10,10,55,10" />
                        <Setter
                            Target="MainControlGrid.(Grid.ColumnSpan)"
                            Value="1" />
                        <Setter
                            Target="BtnLike.Visibility"
                            Value="Visible"></Setter>
                        <Setter
                            Target="BtnPlayRollType.Visibility"
                            Value="Visible"></Setter>
                        <Setter
                            Target="BtnPreviousSong.(Grid.ColumnSpan)"
                            Value="1"></Setter>
                        <Setter
                            Target="BtnPreviousSong.(Grid.Column)"
                            Value="3"></Setter>
                        <Setter
                            Target="BtnPlayStateChange.(Grid.ColumnSpan)"
                            Value="1"></Setter>
                        <Setter
                            Target="BtnPlayStateChange.(Grid.Column)"
                            Value="4"></Setter>
                        <Setter
                            Target="BtnNextSong.(Grid.ColumnSpan)"
                            Value="1"></Setter>
                        <Setter
                            Target="BtnNextSong.(Grid.Column)"
                            Value="5"></Setter>
                        <Setter
                            Target="SliderProgress.Margin"
                            Value="0,0,0,0"></Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger
                            MinWindowWidth="0">
                        </AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter
                            Target="MainControlGrid.(Grid.Column)"
                            Value="0" />
                        <Setter
                            Target="MainControlGrid.(Grid.ColumnSpan)"
                            Value="4" />
                        <Setter
                            Target="GridThis.Visibility"
                            Value="Collapsed"></Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger
                            MinWindowWidth="300" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter
                            Target="ButtonCollapse.Margin"
                            Value="10,10,10,40" />
                        <Setter
                            Target="ButtonExpand.Margin"
                            Value="10,10,10,40" />
                        <Setter
                            Target="ButtonPlayList.Margin"
                            Value="10,10,55,40" />
                        <Setter
                            Target="SubControlGrid.Visibility"
                            Value="Collapsed" />
                        <Setter
                            Target="GridThis.Visibility"
                            Value="Visible"></Setter>
                        <Setter
                            Target="MainControlGrid.(Grid.Column)"
                            Value="0" />
                        <Setter
                            Target="MainControlGrid.(Grid.ColumnSpan)"
                            Value="4" />
                        <Setter
                            Target="BtnLike.Visibility"
                            Value="Collapsed"></Setter>
                        <Setter
                            Target="BtnPlayRollType.Visibility"
                            Value="Collapsed"></Setter>
                        <Setter
                            Target="BtnPreviousSong.(Grid.ColumnSpan)"
                            Value="2"></Setter>
                        <Setter
                            Target="BtnPreviousSong.(Grid.Column)"
                            Value="2"></Setter>
                        <Setter
                            Target="BtnPlayStateChange.(Grid.ColumnSpan)"
                            Value="2"></Setter>
                        <Setter
                            Target="BtnPlayStateChange.(Grid.Column)"
                            Value="4"></Setter>
                        <Setter
                            Target="BtnNextSong.(Grid.ColumnSpan)"
                            Value="2"></Setter>
                        <Setter
                            Target="BtnNextSong.(Grid.Column)"
                            Value="6"></Setter>
                        <Setter
                            Target="SliderProgress.Margin"
                            Value="0,0,15,0"></Setter>
                        <Setter
                            Target="SubControlGrid.Visibility"
                            Value="Collapsed" />
                        <Setter
                            Target="AlbumImage.Visibility"
                            Value="Collapsed" />

                    </VisualState.Setters>
                </VisualState>

                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger
                            MinWindowWidth="800" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter
                            Target="BtnLike.Visibility"
                            Value="Collapsed"></Setter>
                        <Setter
                            Target="BtnPlayRollType.Visibility"
                            Value="Collapsed"></Setter>
                        <Setter
                            Target="BtnPreviousSong.(Grid.ColumnSpan)"
                            Value="2"></Setter>
                        <Setter
                            Target="BtnPreviousSong.(Grid.Column)"
                            Value="2"></Setter>
                        <Setter
                            Target="BtnPlayStateChange.(Grid.ColumnSpan)"
                            Value="2"></Setter>
                        <Setter
                            Target="BtnPlayStateChange.(Grid.Column)"
                            Value="4"></Setter>
                        <Setter
                            Target="BtnNextSong.(Grid.ColumnSpan)"
                            Value="2"></Setter>
                        <Setter
                            Target="BtnNextSong.(Grid.Column)"
                            Value="6"></Setter>
                        <Setter
                            Target="SliderProgress.Margin"
                            Value="0,0,15,0"></Setter>
                        <Setter
                            Target="SubControlGrid.Visibility"
                            Value="Collapsed" />
                        <Setter
                            Target="MainControlGrid.(Grid.Column)"
                            Value="0" />
                        <Setter
                            Target="MainControlGrid.(Grid.ColumnSpan)"
                            Value="4" />
                        <Setter
                            Target="AlbumImage.Visibility"
                            Value="Visible" />
                        <Setter
                            Target="ButtonCollapse.Margin"
                            Value="10,10,10,40" />
                        <Setter
                            Target="ButtonExpand.Margin"
                            Value="10,10,10,40" />
                        <Setter
                            Target="ButtonPlayList.Margin"
                            Value="10,10,55,40" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="Auto" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="2*" />
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel
            Orientation="Horizontal"
            Grid.ColumnSpan="2"
            Grid.Column="0"
            Name="GridSongInfo">
            <Grid
                Margin="0"
                x:Name="ImageContainer"
                PointerPressed="ImageContainer_OnPointerPressed"
                PointerEntered="ImageContainer_OnPointerEntered"
                PointerExited="ImageContainer_OnPointerExited"
                HorizontalAlignment="Left"
                BorderThickness="0">
                <Image
                    Stretch="UniformToFill"
                    x:Name="AlbumImage"/>
            </Grid>
            <StackPanel
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch"
                Spacing="10"
                Margin="10,5,0,0">
                <StackPanel
                    Spacing="12"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Left"
                        FontWeight="Light"
                        Name="TbSongName"/>
                    <Grid Padding="3,0,3,0" BorderThickness="1" BorderBrush="Red">
                        <TextBlock
                            FontWeight="Medium"
                            FontSize="12"
                            Name="TbSongTag"
                            Text="无歌曲"
                            Foreground="Red"/>
                    </Grid>

                </StackPanel>

                <TextBlock
                    VerticalAlignment="Top"
                    Foreground="Gray"
                    PointerPressed="TbSingerName_OnPointerPressed"
                    Name="TbSingerName" />
            </StackPanel>
        </StackPanel>
        <Grid
            Margin="5"
            Name="MainControlGrid"
            Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="2*" />
                <RowDefinition
                    Height="*" />
            </Grid.RowDefinitions>
            <Grid
                Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button
                    Style="{StaticResource ButtonRevealStyle}"
                    Width="45"
                    Height="45"
                    CornerRadius="30"
                    Background="Transparent"
                    Grid.Column="2"
                    Name="BtnPlayRollType"
                    Click="BtnPlayRollType_OnClick"
                    VerticalAlignment="Center">
                    <FontIcon
                        x:Name="IconPlayType"
                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                        Glyph="&#xE169;"></FontIcon>
                </Button>
                <Button
                    Style="{StaticResource ButtonRevealStyle}"
                    Width="45"
                    Height="45"
                    Grid.Column="3"
                    Background="Transparent"
                    Click="BtnPreviousSong_OnClick"
                    Name="BtnPreviousSong"
                    VerticalAlignment="Center"
                    CornerRadius="30">
                    <FontIcon
                        x:Name="IconPrevious"
                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                        Glyph="&#xE892;"></FontIcon>
                </Button>
                <Button
                    Style="{StaticResource ButtonRevealStyle}"
                    Name="BtnPlayStateChange"
                    Width="50"
                    Height="50"
                    Grid.Column="4"
                    VerticalAlignment="Center"
                    Click="BtnPlayStateChange_OnClick"
                    CornerRadius="30">
                    <FontIcon
                        Name="PlayStateIcon"
                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                        Glyph="&#xEDB4;"></FontIcon>
                    <!--EDB5 -->
                </Button>
                <Button
                    Style="{StaticResource ButtonRevealStyle}"
                    Grid.Column="5"
                    Name="BtnNextSong"
                    Click="BtnNextSong_OnClick"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    Width="45"
                    Height="45"
                    CornerRadius="30">
                    <FontIcon
                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                        Glyph="&#xE101;"></FontIcon>
                </Button>
                <ToggleButton
                    Style="{StaticResource ToggleButtonRevealStyle}"
                    Click="BtnLike_OnClick"
                    Grid.Column="6"
                    VerticalAlignment="Center"
                    Name="BtnLike"
                    Background="Transparent"
                    Width="45"
                    Height="45"
                    CornerRadius="30">
                    <FontIcon
                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                        Glyph="&#xE00B;"></FontIcon>
                </ToggleButton>
                <ToggleButton Grid.Column="7" HorizontalAlignment="Center" x:Name="DesktopLyric" IsChecked="{x:Bind IsDesktopLyricsOn,Mode=TwoWay}" Content="词" Style="{StaticResource ToggleButtonRevealStyle}" />
            </Grid>
            <Grid
                Grid.Row="1">
                <controls:DockPanel
                    LastChildFill="True">
                    <TextBlock
                        x:FieldModifier="public"
                        Margin="5,5,0,0"
                        controls:DockPanel.Dock="Right"
                        x:Name="TextBlockTotalTime" />
                    <TextBlock
                        x:FieldModifier="public"
                        Margin="0,5,5,0"
                        controls:DockPanel.Dock="Left"
                        x:Name="TextBlockNowTime" />
                    <Slider
                        controls:DockPanel.Dock="Bottom"
                        ManipulationStarted="SliderProgress_OnManipulationStarted"
                        ManipulationCompleted="SliderProgress_OnManipulationCompleted"
                        ManipulationMode="All"
                        ValueChanged="SliderProgress_ValueChanged"
                        Name="SliderProgress">
                        <Slider.ThumbToolTipValueConverter>
                            <local:ThumbConverter
                                SecondValue="{Binding SecondValue}" />

                        </Slider.ThumbToolTipValueConverter>
                    </Slider>

                </controls:DockPanel>

            </Grid>
        </Grid>
        <StackPanel
            Orientation="Horizontal"
            Margin="0,0,110,0"
            HorizontalAlignment="Right"
            Name="SubControlGrid"
            Grid.Column="3">
            <StackPanel
                Width="150"
                Orientation="Horizontal"
                Margin="10">
                
                <Button
                    Width="40"
                    Height="40"
                    Margin="0,0,3,0"
                    CornerRadius="20"
                    Name="BtnMute"
                    Click="BtnMute_OnCllick"
                    Background="Transparent">
                    <FontIcon
                        Name="BtnMuteIcon"
                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                        Glyph="&#xE15D;" />
                    <!--E198 -->
                </Button>
                <Slider
                    x:FieldModifier="public"
                    Name="SliderAudioRate"
                    VerticalAlignment="Center"
                    Width="100"
                    ValueChanged="SliderAudioRate_ValueChanged" />
            </StackPanel>
        </StackPanel>
        <Button
            HorizontalAlignment="Right"
            Grid.Column="3"
            Width="40"
            x:Name="ButtonPlayList"
            Height="40"
            Margin="10,10,55,10"
            CornerRadius="20"
            Background="Transparent">
            <FontIcon
                FontFamily="{StaticResource SymbolThemeFontFamily}"
                Glyph="&#xE142;" />
            <Button.Flyout>
                <Flyout>
                    <StackPanel
                        Orientation="Vertical">
                        <StackPanel
                            Orientation="Horizontal">
                            <Button
                                Click="ButtonCleanAll_OnClick"
                                Content="清除全部" />
                            <Button
                                Click="ButtonAddLocal_OnClick"
                                Content="添加本地" />
                        </StackPanel>
                        <ListView
                            SelectionMode="Single"
                            Name="ListBoxPlayList"
                            SelectionChanged="ListBoxPlayList_OnSelectionChanged"
                            Height="500"
                            Width="400">
                            <ListView.ItemTemplate>
                                <DataTemplate
                                    x:DataType="local:ListViewPlayItem">
                                    <StackPanel
                                        Orientation="Horizontal">
                                        <StackPanel
                                            Width="340"
                                            Orientation="Vertical">
                                            <TextBlock
                                                Text="{x:Bind Name}" />
                                            <TextBlock
                                                Foreground="Gray"
                                                Text="{x:Bind Artist}" />
                                        </StackPanel>
                                        <Button
                                            Width="30"
                                            Height="30"
                                            Background="Transparent"
                                            Click="PlayListRemove_OnClick"
                                            Tag="{x:Bind index}">
                                            <FontIcon
                                                Margin="-5,0,0,0"
                                                HorizontalAlignment="Left"
                                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                Glyph="&#xE10A;" />
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Flyout>
            </Button.Flyout>
        </Button>
        <Button Grid.Column="3"
                HorizontalAlignment="Right"
            Width="40"
            Height="40"
            Margin="10,10,10,10"
            CornerRadius="20"
            Click="ButtonExpand_OnClick"
            Name="ButtonExpand"
            Background="Transparent">
            <FontIcon
                FontFamily="{StaticResource SymbolThemeFontFamily}"
                Glyph="&#xE971;" />
        </Button>
        <Button
            HorizontalAlignment="Right"
            Grid.Column="3"
            Width="40"
            Height="40"
            Margin="10,10,10,10"
            CornerRadius="20"
            Click="ButtonCollapse_OnClick"
            Name="ButtonCollapse"
            Visibility="Collapsed"
            Background="Transparent">
            <FontIcon
                FontFamily="{StaticResource SymbolThemeFontFamily}"
                Glyph="&#xE972;" />
        </Button>
    </Grid>
</UserControl>
