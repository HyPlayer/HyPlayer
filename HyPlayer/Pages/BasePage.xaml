<Page
    x:Class="HyPlayer.Pages.BasePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:controls1="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hyPlayer="using:HyPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:Windows.UI.Xaml.Media"
    mc:Ignorable="d">
    <Grid>
        <NavigationView
            x:Name="NavMain"
            Margin="0,0,0,0"
            BackRequested="OnNavigateBack"
            Background="{ThemeResource AccentPanelAcrylic}"
            IsBackButtonVisible="Visible"
            IsBackEnabled="True"
            IsSettingsVisible="False"
            Loaded="NavMain_Loaded"
            SelectionChanged="NavMain_OnSelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    Content="主页"
                    Icon="Home"
                    Tag="PageHome" />
                <NavigationViewItem
                    Content="搜索"
                    Icon="Zoom"
                    Tag="PageSearch" />
                <NavigationViewItem
                    Content="下载"
                    Icon="Download"
                    Tag="PageDownload" />
                <NavigationViewItem Tag="PageMe">
                    <StackPanel Margin="-10,0,0,0" Orientation="Horizontal">
                        <PersonPicture
                            x:Name="PersonPictureUser"
                            Width="20"
                            Margin="5,0,0,0" />
                        <TextBlock
                            x:Name="TextBlockUserName"
                            Margin="16,0,0,0"
                            Text="登录" />
                    </StackPanel>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <Frame x:Name="BaseFrame" Margin="0,40,0,0" />
        </NavigationView>
        <!--  登录弹窗  -->
        <ContentDialog x:Name="DialogLogin" Width="400">
            <StackPanel Orientation="Vertical">
                <Image Height="200" Source="/Assets/LargeTile.scale-400.png" />
                <TextBlock
                    Padding="0,3,0,10"
                    HorizontalAlignment="Center"
                    FontSize="25"
                    Text="登录到网易云音乐" />
                <TextBox
                    x:Name="TextBoxAccount"
                    Margin="5"
                    KeyDown="TextBoxAccount_OnKeyDown"
                    PlaceholderText="手机 / 邮箱" />
                <PasswordBox
                    x:Name="TextBoxPassword"
                    Margin="5"
                    KeyDown="TextBoxPassword_OnKeyDown"
                    PlaceholderText="密码" />
                <Button
                    Name="ButtonLogin"
                    Margin="0,15,0,0"
                    HorizontalAlignment="Stretch"
                    Click="ButtonLogin_OnClick"
                    Content="登录"
                    Style="{StaticResource AccentButtonStyle}" />
                <TextBlock Padding="0,25,0,0" TextAlignment="Center">
                    <TextBlock.Text>
                        登录代表你同意相关条款
                    </TextBlock.Text>
                </TextBlock>
                <controls1:InfoBar
                    x:Name="InfoBarLoginHint"
                    CloseButtonClick="InfoBarLoginHint_OnCloseButtonClick"
                    IsOpen="False" />
            </StackPanel>
        </ContentDialog>
    </Grid>
</Page>